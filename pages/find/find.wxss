/* pages/find/find.wxss */
/* 轮播图 */
.swiper-all {
  width: 100%;
  height: 528rpx;
  position: relative;
  margin-top: 20px;
}
.swiper {
  width: 100%;
  height: 528rpx;
}

.swiper-item{
  width: 100%;
  height: 100%;
}
.demo-1{
  background-color: tomato;
}
.demo-2{
  background-color: orange;
}
.demo-3{
  background-color: hotpink;
}
/* 三个点S */
.dots{ 
  position: absolute;
  bottom: 0;
  right: 0;
  left: 0;
  height: 38rpx;
  text-align: center;
}
.dots text{   
  display: inline-block;
  width: 10rpx;
  height: 6rpx;
  background: #FFFFFF;
  border-radius: 3rpx;
  opacity: 0.5;
  margin: 16rpx 5rpx;
}
.dots text.on {
  width: 22rpx;
  background: white;
}
/* 三个点E */

.search{
  width: 100%;
  height: 88rpx;
  box-sizing: border-box;
  padding: 14rpx 30rpx;
  background: white;
  position: relative;
  /* background-color: #cccccc; */
}
.search input{
  width: 609rpx;
  background: #EFEFEF;
  border-radius: 30rpx;
  height: 60rpx;
  display: inline-block;
  vertical-align: middle;
  padding-left: 60rpx;
  box-sizing: border-box;
  font-size: 26rpx;
  font-weight: 400;
  color: #353535;
  line-height: 60rpx;
}
.search text {
  font-size: 26rpx;
  font-weight: 400;
  color: #444444;
  line-height: 60rpx;
  display: inline-block;
  text-align: right;
  vertical-align: middle;
  width: 81rpx;
}
.search image {
  display: inline-block;
  width: 28rpx;
  height: 28rpx;
  position: absolute;
  left: 50rpx;
  top: 30rpx;
}